#NOTES
alias todo="vim ~/.todo.md"
alias book="vim ~/.books.md"
alias idee="vim ~/.ideas"
alias links="vim ~/.links"
alias learn="echo && date +'%T' && date --date='+25min' +'%T' && sleep 25m && vlc & "
alias note="vim ~/.note"
alias note="echo '\n' >> ~/.note && date +%Y.%m.%d-%H:%M:%S >> ~/.note && echo '===================' >> ~/.note && vim '+normal G' ~/.note"
