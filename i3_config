###xinput settings
#trackpoint
exec xinput --set-prop 13 331 1 # allow scrolling
exec xinput --set-prop 13 339 1 # accel speed
#touchpad
exec xinput --set-prop 12 339 1 # accel speed
exec xinput --set-prop 12 319 1 # tap to click
#exec xinput --set-prop 12 327 1 # natural scrolling
exec xinput set-prop $(xinput | grep Synaptics | awk '{print $5}'| grep -Eo "[0-9]+"`) $(xinput list-props $DEVICE | grep Natural | head -n1  | awk '{print $5}' | grep -Eo "[0-9]+"`) 1 # natural scrolling 
