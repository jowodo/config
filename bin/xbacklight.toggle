#!/usr/bin/env bash
split=2
lowfactor=4
min=0.1
max=100
low=$((max/($lowfactor*$split)))
echo "low $low" 
step=$(( (max-low)/$split))
echo "step $step" 
current=$(xbacklight -get)
echo "old value: $current" 

if [ $current -eq $max ] 
then 
	xbacklight -set $min
elif [ $current -eq 0 ] ; then
	xbacklight -set $low
else
	xbacklight -inc $step
fi
xbacklight -get
